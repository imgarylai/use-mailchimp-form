{
  "private": false,
  "name": "use-mailchimp-form",
  "version": "3.2.0",
  "description": "MailChimp Form implemented in React Hooks",
  "license": "MIT",
  "author": "Gary Lai <garylai1990@gmail.com>",
  "homepage": "https://github.com/imgarylai/use-mailchimp-form#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imgarylai/use-mailchimp-form.git"
  },
  "bugs": {
    "url": "https://github.com/imgarylai/use-mailchimp-form/issues"
  },
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build",
    "clean": "rimraf dist coverage",
    "dev": "vite build --watch",
    "predocs": "rimraf api-docs",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "lint": "eslint .",
    "prepack": "npm run build",
    "prepare": "husky",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "dependencies": {
    "fetch-jsonp": "1.3.0",
    "query-string": "^9.3.1"
  },
  "peerDependencies": {
    "react": ">= 18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@eslint/js": "^9.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "12.0.2",
    "@semantic-release/npm": "^13.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "30.0.0",
    "@types/jsdom": "27.0.0",
    "@types/node": "^24.0.0",
    "@types/react": "19.2.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "husky": "9.1.7",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jsdom": "27.3.0",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "prettier-package-json": "^2.4.11",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rimraf": "^6.0.0",
    "semantic-release": "^25.0.0",
    "sort-package-json": "3.6.0",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "4.9.0",
    "typescript": "5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "keywords": [
    "hooks",
    "mailchimp",
    "react"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "tests/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.config.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
